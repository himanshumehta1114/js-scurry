{
  "name": "js-scurry",
  "displayName": "js-scurry",
  "description": "VS Code extension for js playground",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:js-scurry.setLocation"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
			"type": "object",
			"title": "JsScurry",
			"properties": {
				"jsScurry.scurriesLocation": {
					"type": "string",
					"default": "hello world",
					"description": "Storage location for js scurries.",
          "scope": "machine"
				}
			}
		},
    "commands": [
      {
        "command": "js-scurry.setLocation",
        "title": "jsScurry: Set location for scurries"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.53.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
